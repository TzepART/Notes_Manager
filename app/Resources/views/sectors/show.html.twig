{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sectors</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sector.id }}</td>
            </tr>
            <tr>
                <th>Beginangle</th>
                <td>{{ sector.beginAngle }}</td>
            </tr>
            <tr>
                <th>Endangle</th>
                <td>{{ sector.endAngle }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sector.name }}</td>
            </tr>
            <tr>
                <th>Parentsectorid</th>
                <td>{{ sector.parentSectorId }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{% if sector.dateCreate %}{{ sector.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{% if sector.dateUpdate %}{{ sector.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sectors_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sectors_edit', { 'id': sector.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
