{% extends 'base.html.twig' %}

{% block main %}
    <h1>Notes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Text</th>
                <th>Datecreate</th>
                <th>Dateupdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('notes_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.name }}</td>
                <td>{{ note.text }}</td>
                <td>{% if note.dateCreate %}{{ note.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if note.dateUpdate %}{{ note.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('notes_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('notes_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
