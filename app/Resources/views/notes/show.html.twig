{% extends 'base.html.twig' %}

{% block main %}
    <div class="jumbotron col-md-6 col-md-offset-3 create_note_form">

        <h2 style="text-align: center">{{ note.name }}</h2>

        <div class="form-group">
            <textarea placeholder="Текст заметки" name="text" class="form-control" rows="3">{{ note.text }}</textarea>
        </div>
        <div class="form-group">
            <a class="btn btn-primary btn-lg btn-block" href="{{  path('notes_index') }}" >Список заметок окружности</a>
        </div>
        <div class="form-group">
            <a class="btn btn-primary btn-lg btn-block" href="{{ path('notes_edit', { 'id': note.id }) }}" >Редактировать заметку</a>
        </div>
        <div class="form-group">
            {{ form_start(delete_form) }}
            <input class="btn btn-primary btn-lg btn-block" type="submit" value="Удалить">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
