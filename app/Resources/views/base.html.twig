<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Symfony Demo application{% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/additional_style.css') }}">
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/jcanvas.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}

</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li role="presentation"><a href="{{ path('circle_index') }}">Список окружностей</a></li>
                <li role="presentation"><a href="{{ path('notes_index') }}">Входящие</a></li>
                <li role="presentation"><a href="{{ path('circle_new') }}">Добавить окружность</a></li>
                <li role="presentation"><a href="{{ path('notes_new') }}">Добавить заметку</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li role="presentation"><a href="{{ path('logout') }}">Выйти</a></li>
                {% else %}
                    <li role="presentation"><a href="{{ path('login') }}">Войти</a></li>
                {% endif %}
            </ul>
        </nav>
        <h3 class="text-muted">Notes Manager <span class="label label-default">Beta</span></h3>
    </div>

{% endblock %}

<div class="container body-container" style="height: 500px;">
    {% block main %}{% endblock %}
</div>

{% block footer %}
    <footer class="footer">
        <p>&copy; 2016 TzepArt Company, Inc.</p>
    </footer>
{% endblock %}


</body>
</html>
