{% extends 'base.html.twig' %}
{% block main %}
    <div class="row">
        {{ form_start(form) }}
        <div class="col-md-4 col-md-offset-4 create_register_form">

            <h2 class="register_title">Регистрация</h2>

            <div class="form-group">
                {{ form_row(form.username) }}
            </div>

            <div class="form-group">
                {{ form_row(form.email) }}
            </div>

            <div class="form-group">
                {{ form_row(form.plainPassword.first) }}
            </div>

            <div class="form-group">
                {{ form_row(form.plainPassword.second) }}
            </div>

            <div class="form-group form_submit">
                <input name="save" value="Зарегистрироваться" class="btn btn-success register_button" type="submit">
            </div>

        </div>
        {{ form_end(form) }}
    </div>
    <style>
        .form-horizontal .create_register_form .form-group label{
            text-align: left;
            padding-left: 10px;
        }
    </style>
{% endblock %}